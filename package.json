{
  "name": "shahul-portfolio",
  "version": "1.0.0",
  "description": "Modern portfolio website for Shahul Hameed",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && vite",
